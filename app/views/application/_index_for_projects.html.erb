
<!-- this adds Foundation Icon Fonts!! -->
<link href="http://cdnjs.cloudflare.com/ajax/libs/foundicons/3.0.0/foundation-icons.css" rel="stylesheet">
<% if current_user.contractor? %>
  <% Project.all.each do |project| %>
     <div class="row">
       <div class="large-11 small-centered columns">
         <div class="box">
           <div class="box-icon">
             <span class="fi-telephone"></span>
           </div>
           <div class="info">
             <h4 class="text-center"><%= link_to(project.title, project_path(project))%></h4>
             <p>The Project is about <%= project.title %>. Location of the project
                is <%= project.address %> <%= project.zipcode %> and will be <%= project.duration %> long. Find out more
                  about this project Click Here! </p>
           </div>
         </div>
       </div>
  <% end %>
<% end %>

<% if current_user.user? %>
    <% Company.all.each do |company| %>
    <div class="row">
     <div class="small-11 small-centered columns">
       <div class="box">
         <div class="box-icon">
             <span class="fi-mail"></span>
         </div>
         <div class="info">
           <h4 class="text-center"><%= link_to(company.name, company_path(company))%></h4>
           <p><%= company.name %> has been working since <%= company.working_since %> in
              the area of <%= company.address %> <%= company.zipcode %> find more
              about the Company Click Here! </p>
         </div>
       </div>
     </div>
   </div>
  <% end %>
<% end %>
