<div class="row">
  <h3>Your Projects</h3>
    <div class="large-10 small-12 large-centered column">
      <% if current_user.role == "contractor" || current_user.role == "admin" %>
      <% @user.company.projects.each do |project| %>
      <table class="responsive">
        <tbody>
          <tr>
            <th>Project</th>
            <th>Details</th>
            <th>Category</th>
            <th>Duration</th>
            <th>Address</th>
            <th>Zipcode</th>
          </tr>
          <tr>
            <td><%=project.title %></td>
            <td><%=project.description %></td>
            <td><%=project.category %></td>
            <td><%=project.duration %></td>
            <td><%=project.address %></td>
            <td><%=project.zipcode %></td>
            <td><%= link_to 'Write A Proposal', project_path(project), :class => 'button-xs' %></td>
          </tr>
            <% end %>
              <% else %>
                <%= render 'dashboard/user_dashboard' %>
            <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
